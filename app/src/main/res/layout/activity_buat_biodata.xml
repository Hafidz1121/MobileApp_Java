<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuatBiodataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nomor :"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/txt_InputNomor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Masukan Nomor"
            android:inputType="number"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:autofillHints="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama :"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/txt_InputNama"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Masukan Nama"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:autofillHints="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir :"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/txt_InputTglLahir"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Pilih Tanggal Lahir"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:autofillHints="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin :"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"/>

        <AutoCompleteTextView
            android:id="@+id/txt_InputJK"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Masukan Jenis Kelamin"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:autofillHints="">

        </AutoCompleteTextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat :"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/txt_InputAlamat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Masukan Alamat"
            android:inputType="textMultiLine"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:maxLines="4"
            android:autofillHints="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="90dp">

            <Button
                android:id="@+id/btn_Kembali"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Kembali"
                android:textSize="18sp"
                android:drawableLeft="@drawable/baseline_arrow_back_24"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_Simpan"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity=""
                android:text="Simpan"
                android:textSize="18sp"
                android:drawableLeft="@drawable/baseline_save_24"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>